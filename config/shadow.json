{
  "name": "depth_estimation_sr3",
  "phase": "train",
  "gpu_ids": [0],
  "path": {
    "log": "logs",
    "tb_logger": "tb_logger",
    "results": "results",
    "checkpoint": "checkpoints"
    // "resume_state": "D:/FYP-300-NIR/experiments/depth_estimation_sr3_250421_182041/checkpoints/I24000_E6"

  },
  "datasets": {
    "train": {
      "name": "DepthTrainSet",
      "mode": "depth",
      "dataroot": "D:/FYP-001/MS2dataset",
      "datatype": "img",
      "batch_size": 1,
      "num_workers": 4,
      "pin_memory": true,
      "persistent_workers": true,
      "use_shuffle": true
    },
    "val": {
      "name": "DepthValSet",
      "mode": "depth",
      "dataroot": "D:/FYP-001/MS2dataset",
      "datatype": "img"
    }
  },
  "model": {
    "which_model_G": "sr3",
    "finetune_norm": false,
    "unet": {
      "in_channel": 1,
      "out_channel": 1,
      "inner_channel": 64,
      "norm_groups": 16,
      "channel_multiplier": [1, 2, 4, 8],
      "attn_res": [16],
      "res_blocks": 2,
      "dropout": 0
    },
    "beta_schedule": {
      "train": {
        "schedule": "linear",
        "n_timestep": 250,  
        "linear_start": 1e-4,
        "linear_end": 0.02
      },
      "val": {
        "schedule": "linear",
        "n_timestep": 250,
        "linear_start": 1e-4,
        "linear_end": 0.02
      }
    },
    "diffusion": {
      "image_size": 256,
      "channels": 1,
      "conditional": true
    }
  },
  "train": {
    "num_epochs": 100,               
    "val_freq": 500,
    "save_checkpoint_freq": 1000,
    "print_freq": 100,
    "optimizer": {
      "type": "adam",
      "lr": 3e-5
    },
    "ema_scheduler": {
      "step_start_ema": 5000,
      "update_ema_every": 1,
      "ema_decay": 0.9999
    }
  },
  "wandb": {
    "project": "depth_estimation_project"
  },
  "distributed": false
}